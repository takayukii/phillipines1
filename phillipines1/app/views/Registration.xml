	                <PickerRow title="Unemployed"/>
	                <PickerRow title="Self-employed"/>
	                <PickerRow title="Employed"/>
	                <PickerRow title="Unemployed"/>
	                <PickerRow title="Self-employed"/>
	            </PickerColumn>
			</Picker>
			<Label>Work Experience</Label>
			<Label>Job 1</Label>
			<Label>Position</Label>
			<TextField id="job1_position" />
			<Label>Period - Years</Label>
			<Picker id="job1_years">
				<PickerColumn id="column1">
	                <PickerRow title="1"/>
	                <PickerRow title="2"/>
	                <PickerRow title="3"/>
	                <PickerRow title="4"/>
	                <PickerRow title="5"/>
	                <PickerRow title="6"/>
	                <PickerRow title="7"/>
	                <PickerRow title="8"/>
	                <PickerRow title="9"/>
	                <PickerRow title="10"/>
	                <PickerRow title="11"/>
	                <PickerRow title="12"/>
	            </PickerColumn>
			</Picker>
			<Label>Period - Months</Label>
			<Picker id="job1_months">
				<PickerColumn id="column1">
	                <PickerRow title="1"/>
	                <PickerRow title="2"/>
	                <PickerRow title="3"/>
